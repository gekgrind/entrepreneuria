{
  "compilerOptions": {
    /* ğŸŒ Core setup */
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,

    /* ğŸ§­ Aliases + paths */
    "baseUrl": ".",                      // ğŸ‘ˆ REQUIRED for '@' imports to work
    "paths": {
      "@/*": ["./*"]
    },

    /* âš™ï¸ Next.js plugin */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* ğŸ“¦ Included project files */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* ğŸš« Exclusions */
  "exclude": ["node_modules"]
}

